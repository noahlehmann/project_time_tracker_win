<Page x:Class="ProjectTimeTrackerWPF.Views.TimerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectTimeTrackerWPF.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="300"
      Title="TimerPanel">

    <Page.Resources>
        <DataTemplate x:Key="ProjectComboboxItemTemplate" DataType="projects:Project">
            <ComboBoxItem Content="{Binding ProjectName}"/>
        </DataTemplate>    
    </Page.Resources>
    
    <DockPanel Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0"
                materialDesign:HintAssist.Hint="-- Projekt wählen --"
                x:Name="ProjectsComboBox" 
                Margin="20"
                ItemsSource="{Binding Projects}"
                ItemTemplate="{StaticResource ProjectComboboxItemTemplate}"
                IsEnabled="{Binding IsProjectSelectionAllowed, Mode=OneWay}" 
                SelectedItem="{Binding SelectedProject, Mode=OneWayToSource}"/>
            <TextBlock Grid.Row="1"
                HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" Text="{Binding DisplayTime, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button 
                    x:Name="StartButton"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Content="Start" 
                    Click="StartButton_Click"
                    IsEnabled="{Binding IsStartTimerAllowed, Mode=OneWay}"/>
                <Button 
                    x:Name="StopButton"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Content="Stop" 
                    Click="StopButton_Click"
                    IsEnabled="{Binding IsStopTimerAllowed, Mode=OneWay}"/>
            </Grid>
        </Grid>
    </DockPanel>



</Page>
